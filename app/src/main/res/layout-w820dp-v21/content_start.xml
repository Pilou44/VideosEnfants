<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.StartActivity"
    tools:showIn="@layout/activity_start"
    android:gravity="center">

    <ImageButton
        android:id="@+id/options"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/options"
        android:backgroundTint="@color/transparent"
        android:background="@drawable/button"
        android:visibility="gone"
        android:contentDescription="@string/settings_description" />

    <ImageButton
        android:id="@+id/maison"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/maison"
        android:backgroundTint="@color/transparent"
        android:background="@drawable/button"
        android:contentDescription="@string/dlna_description" />

    <ImageButton
        android:id="@+id/voiture"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/maison"
        android:layout_alignBottom="@id/maison"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/voiture"
        android:backgroundTint="@color/transparent"
        android:background="@drawable/button"
        android:contentDescription="@string/local_description" />
</RelativeLayout>
